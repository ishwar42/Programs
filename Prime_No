#include <stdio.h>

int main()
{
    int n, i, status = 0;
    printf("Enter a number:\n");
    scanf("%d",&n);
    
    if(n == 0 || n == 1)
        status = 1;
    
    else if(n % 2 == 0 || n % 3 == 0)
        status = 1;
        
    else
        status = 0;
        
    if(status == 0)
        printf("%d is a prime number",n);
    else
        printf("%d is not a prime number",n);
    
    return 0;
}
